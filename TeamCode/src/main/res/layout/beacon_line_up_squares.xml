    android:layout_width="match_parent" android:layout_height="match_parent">

    <View android:id="@+id/blueSideBeacon"
        android:background="@drawable/green_square"
        android:layout_marginTop="1150px"
        android:layout_marginLeft="767px"
        android:layout_width="67px"
        android:layout_height="100px"
        android:visibility="invisible"
        />

    <View android:id="@+id/redSideBeacon"
        android:background="@drawable/green_square"
        android:layout_marginTop="1150px"
        android:layout_marginLeft="313px"
        android:layout_width="67px"
        android:layout_height="100px"
        android:visibility="invisible"
        />

    <View android:id="@+id/Origin"
        android:background="@drawable/green_square"
        android:layout_marginTop="500px"
        android:layout_marginLeft="180px"
